<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorMainDark</item>
        <item name="colorPrimaryDark">@color/colorMainDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <style name="Material" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorSecondaryAccent</item>
        <item name="colorPrimaryDark">@color/colorMainDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <style name="Material.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Material.NoActionBar.GreyStatusBar">
        <item name="android:statusBarColor">@color/colorSupplyWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
